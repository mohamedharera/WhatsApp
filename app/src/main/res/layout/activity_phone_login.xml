<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:textAlignment="center"
        android:hint="write phone number here"
        android:layout_alignParentLeft="true"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/phone"
        android:drawableLeft="@drawable/phone"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        />
    <EditText
        android:id="@+id/vertification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/phone_number_input"
        android:textAlignment="center"
        android:hint="write vertification code"
        android:layout_alignParentLeft="true"
        android:background="@drawable/inputs"
        android:padding="5dp"
        android:visibility="invisible"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/password"
        android:drawableLeft="@drawable/password"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send vertification code"
        android:layout_below="@+id/vertification_code_input"
        android:layout_marginTop="6dp"
        android:id="@+id/send_code_button"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_below="@+id/send_code_button"
        android:layout_marginTop="3dp"
        android:id="@+id/Verify_button"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

</RelativeLayout>